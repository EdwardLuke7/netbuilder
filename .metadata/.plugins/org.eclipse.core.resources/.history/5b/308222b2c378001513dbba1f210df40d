import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;

public class JDBCOrderLineDAO implements OrderLineDAO {

	public ArrayList<OrderLine> fetchOrderLines(CustomerOrder order) {
		ArrayList<OrderLine> orderLines = new ArrayList<OrderLine>();
		
		ResultSet results = JDBCDatabaseManager.query("SELECT * FROM nbg.customer_order_lines WHERE customer_order_id = " + order.getID());
		
		try {
			while (results.next()) {
				int productId = results.getInt("product_id");
				int quantity = results.getInt("quantity");
				OrderLine line = new OrderLine(productId, quantity);
				
				orderLines.add(line);
			}
		} 
		catch (SQLException sqle) {
			sqle.printStackTrace();
		}
		catch (Exception e) {
			e.printStackTrace();
		}
		
		return orderLines;
	}
}
